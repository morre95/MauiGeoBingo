<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="MauiGeoBingo.Popups.OverlayPopup"
               VerticalOptions="Fill"
               HorizontalOptions="Fill"
               Color="Transparent">

    <VerticalStackLayout Padding="15,250,15,5" Loaded="PopupLoaded">
        <ActivityIndicator IsRunning="True" x:Name="activator" />
        <Label Text="Waiting for players to join" />
        <Button Text="OK" Clicked="OnOKButtonClicked" />
    </VerticalStackLayout>

</toolkit:Popup>