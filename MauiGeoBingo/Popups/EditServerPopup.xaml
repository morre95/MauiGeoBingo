<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="MauiGeoBingo.Popups.EditServerPopup">


    <VerticalStackLayout WidthRequest="300">
        <Label Text="Server namn" TextColor="Black" />
        <Entry x:Name="serverName"  TextColor="Black" />
        <Button Text="Save" Clicked="SaveButtonClicked" TextColor="Black" />
        <Button Text="Cancel" Clicked="CancelButtonClicked" TextColor="Black" />
    </VerticalStackLayout>

</toolkit:Popup>